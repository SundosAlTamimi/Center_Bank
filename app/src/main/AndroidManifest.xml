<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.falconssoft.centerbank">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".OwnerCheques"></activity>
        <activity android:name=".TrackingCheque" />
        <activity android:name=".RequestCheque" />
        <activity android:name=".ProfilePage" />
        <activity android:name=".testUpload" />
        <activity android:name=".Request" />
        <activity
            android:name=".LogInActivity"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".SingUpActivity"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".EditerCheackActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".AlertScreen"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".JeroActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".LogHistoryActivity"
            android:screenOrientation="sensor" />

        <receiver android:name=".notificationReciver">
            <intent-filter>
                <action android:name="YES" />
                <action android:name="STOP" />
            </intent-filter>
        </receiver>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.CAMERA" />

</manifest>