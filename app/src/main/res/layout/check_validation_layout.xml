<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linerBarcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/checkValidation_headerLinear"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/checkValidation_scanLinear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:gravity=""
            android:drawableLeft="@drawable/ic_phone"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:text="@string/scan_barcode"
            android:textColor="@color/red"
            android:textSize="20sp"
            app:fontFamily="serif" />

        <ImageView
            android:id="@+id/checkValidation_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_close"
            />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="2"
        android:background="@color/colorWhite"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Nocolor"
                android:src="@drawable/rscananimation"
                app:civ_border_color="@color/colorWhiteLight"
                app:civ_border_width="3dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/checkValidation_scanBarcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_bac_sinup"
            android:fontFamily="sans-serif-light"
            android:paddingVertical="10dp"
            android:paddingHorizontal="50dp"
            android:text="@string/scan_barcode"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:fontFamily="sans-serif-smallcaps" />
    </LinearLayout>

    <TextView
        android:id="@+id/checkValidation_help"
        android:textSize="16sp"
        android:fontFamily="serif"
        android:drawableLeft="@drawable/ic_help"
        android:drawablePadding="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/have_a_problem"/>

    <LinearLayout
        android:id="@+id/checkValidation_serial_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:hint="@string/serial_no"
            android:focusableInTouchMode="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/checkValidation_serial"
                android:textColor="@color/gray_dark"
                android:fontFamily="serif"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/checkValidation_check"
            android:gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/yellow"
            android:fontFamily="serif"
            android:textSize="18sp"
            android:text="@string/enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    </LinearLayout>

