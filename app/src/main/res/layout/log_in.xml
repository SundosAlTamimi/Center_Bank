<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bank4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/clear_buttons"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/bank4"
                app:civ_border_color="@color/colorGold"
                app:civ_border_width="3dp" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="0"
                android:fontFamily="sans-serif-light"
                android:text="@string/cheque_app"
                android:textColor="@color/colorWhite"
                android:textSize="25sp"
                app:fontFamily="sans-serif-smallcaps" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/login_english"
                    android:src="@drawable/usa"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    />

                <View
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

                <ImageView
                    android:id="@+id/login_arabic"
                    android:src="@drawable/jordan"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/LogInUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edit_bac_s"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:hint="@string/user_name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/colorWhiteLight"
                android:textColorHint="@color/colorWhiteLight"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/LogInPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edit_bac_s"
                android:drawableLeft="@drawable/ic_https_black_24dp"
                android:hint="@string/password"
                android:padding="10dp"
                android:textColor="@color/colorWhiteLight"
                android:textColorHint="@color/colorWhiteLight"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal|center"
            android:layout_weight="3"
            android:orientation="vertical">

            <Button
                android:id="@+id/LogInSingIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edit_bac_"
                android:text="@string/sing_in"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/LogInSingUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edit_bac_sinup"
                android:text="@string/sing_up"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>