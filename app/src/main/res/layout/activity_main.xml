<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bank4"
    android:orientation="vertical">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/clear_buttons"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/main_username"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_weight="5"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="Welcome Ala'a "
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform"
                    app:fontFamily="sans-serif-smallcaps" />

                <RelativeLayout
                    android:id="@+id/notifyLayout"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="35dp"
                    >

                    <TextView
                        android:id="@+id/button_notif"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:visibility="visible"
                        android:layout_width="30dp"
                        android:background="@drawable/ic_notifications"/>

                    <TextView
                        android:id="@+id/button_notification"
                        android:layout_height="30dp"
                        android:layout_width="45dp"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:backgroundTint="@color/white"
                        android:drawableTop="@drawable/red_circle"
                        android:drawablePadding="10dp"
                        android:background="@drawable/ic_notifications"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/requestLayout"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="35dp"
                    >

                    <TextView
                        android:id="@+id/button_request22"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:visibility="visible"
                        android:background="@drawable/ic_monetization_on_black_24dp"
 />
                    <TextView
                        android:id="@+id/button_request"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="15dp"
                        android:layout_margin="3dp"
                        android:padding="3dp"
                        android:visibility="invisible"
                        android:layout_width="35dp"
                        android:backgroundTint="@color/white"
                        android:drawableTop="@drawable/red_circle"
                        android:drawablePadding="10dp"

                        android:background="@drawable/ic_monetization_on_black_24dp"
 />

                </RelativeLayout>


            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@drawable/edit_bac_s"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/messages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="13"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/mainpage_sentence"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:fontFamily="sans-serif-smallcaps" />

            <ImageView
                android:id="@+id/ima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/main_addAccount"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_person_add_black_24dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                app:fontFamily="sans-serif-smallcaps" />

            <!--<de.hdodenhof.circleimageview.CircleImageView-->
            <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
            <!--android:id="@+id/profile_image"-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="80dp"-->
            <!--android:layout_weight="1"-->
            <!--android:src="@drawable/rscananimation"-->
            <!--app:civ_border_color="@color/colorWhiteLight"-->
            <!--app:civ_border_width="3dp" >-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="8"
                android:background="@color/Nocolor"
                android:elevation="@dimen/cardview_default_elevation"
                app:cardBackgroundColor="@color/Nocolor"
                app:cardCornerRadius="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!--<androidx.recyclerview.widget.RecyclerView-->
                    <!--android:id="@+id/res"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="@color/colorWhite" />-->

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/res"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:listitem="@layout/raw_account_chooser" />

                    <!--<pl.droidsonroids.gif.GifImageView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="@color/Nocolor"-->
                    <!--android:src="@drawable/rscananimation"-->
                    <!--app:civ_border_color="@color/colorWhiteLight"-->
                    <!--app:civ_border_width="3dp"-->
                    <!--/>-->
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="11"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Editing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_bac_sinup"
                        android:drawableLeft="@drawable/ic_send_black_24dp"
                        android:drawablePadding="10dp"

                        android:fontFamily="sans-serif-light"
                        android:gravity="center|start"
                        android:padding="10dp"
                        android:text="@string/send"

                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform"
                        app:fontFamily="sans-serif-smallcaps" />

                    <!--<TextView-->
                    <!--android:id="@+id/main_history"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="5dp"-->

                    <!--android:layout_weight="1"-->

                    <!--android:background="@drawable/edit_bac_sinup"-->
                    <!--android:drawableLeft="@drawable/ic_grain"-->
                    <!--android:drawablePadding="10dp"-->

                    <!--android:fontFamily="sans-serif-light"-->
                    <!--android:gravity="center|start"-->
                    <!--android:padding="10dp"-->
                    <!--android:text="@string/log_history"-->

                    <!--android:textColor="@color/colorWhite"-->
                    <!--android:textSize="20sp"-->
                    <!--android:textStyle="bold"-->
                    <!--app:autoSizeMaxTextSize="20sp"-->

                    <!--app:autoSizeMinTextSize="12sp"-->
                    <!--app:autoSizeStepGranularity="2sp"-->
                    <!--app:autoSizeTextType="uniform"-->
                    <!--app:fontFamily="sans-serif-smallcaps" />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/main_request"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/left_background"

                        android:drawableLeft="@drawable/ic_grain"
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif-light"

                        android:gravity="center|start"
                        android:padding="10dp"
                        android:text="@string/request"
                        android:textColor="@color/colorWhite"

                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:autoSizeMaxTextSize="20sp"

                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform"
                        app:fontFamily="sans-serif-smallcaps" />

                    <TextView
                        android:id="@+id/main_jero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"

                        android:background="@drawable/edit_bac_sinup"
                        android:drawableLeft="@drawable/ic_swap"
                        android:drawablePadding="10dp"

                        android:fontFamily="sans-serif-light"
                        android:gravity="center|start"
                        android:padding="10dp"
                        android:text="@string/giro"

                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="20sp"

                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform"
                        app:fontFamily="sans-serif-smallcaps" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/main_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/left_background"
                        android:drawableLeft="@drawable/ic_grain"
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center|start"
                        android:padding="10dp"
                        android:text="@string/wallet"

                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform"
                        app:fontFamily="sans-serif-smallcaps" />

                    <TextView
                        android:id="@+id/main_cashier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/accept_background"
                        android:drawableLeft="@drawable/ic_grain"
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center|start"
                        android:padding="10dp"
                        android:text="@string/cashier_check"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"

                        android:textStyle="bold"
                        android:visibility="gone"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform"
                        app:fontFamily="sans-serif-smallcaps" />

                    <TextView
                        android:id="@+id/main_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"

                        android:background="@drawable/edit_bac_sinup"
                        android:drawableLeft="@drawable/ic_access_time_black_24dp"
                        android:drawablePadding="10dp"

                        android:fontFamily="sans-serif-light"
                        android:gravity="center|start"
                        android:padding="10dp"
                        android:text="@string/log_history"

                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="20sp"

                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform"
                        app:fontFamily="sans-serif-smallcaps" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        app:headerLayout="@layout/nav_header_main"
        app:itemTextColor="@color/dark_gray"
        app:menu="@menu/main_menu" />

</androidx.drawerlayout.widget.DrawerLayout>