<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    android:textDirection="locale"
    android:orientation="vertical"
    android:background="@drawable/bank4"
    tools:context=".ProfilePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/clear_buttons"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!--            <de.hdodenhof.circleimageview.CircleImageView-->
            <!--                xmlns:app="http://schemas.android.com/apk/res-auto"-->
            <!--                android:id="@+id/profile_image"-->
            <!--                android:layout_width="150dp"-->
            <!--                android:layout_height="80dp"-->
            <!--                android:layout_weight="1"-->
            <!--                android:src="@drawable/ic_perm_identity_black_24dp"-->
            <!--                app:civ_border_color="@color/colorWhiteLight"-->
            <!--                app:civ_border_width="3dp"-->
            <!--                tools:ignore="VectorDrawableCompat" />-->


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:text="@string/profile"
                android:textSize="25sp"
                app:autoSizeMaxTextSize="25sp"
                app:autoSizeMinTextSize="15sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                android:textColor="@color/colorWhite"
                app:fontFamily="sans-serif-smallcaps" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:background="@drawable/edit_bac_s"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:drawableStart="@drawable/ic_credit_card"
                            android:drawableTint="@color/red"
                            android:drawablePadding="5dp"
                            android:padding="5dp"
                            android:text="@string/account_type"
                            android:textColor="@color/red"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/profile_account_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/Nocolor"
                            android:drawablePadding="5dp"
                            android:enabled="false"
                            android:fontFamily="serif"
                            android:gravity="center_vertical"
                            android:padding="3dp"
                            android:singleLine="true"
                            android:textColor="@color/colorWhiteLight"
                            android:textSize="14sp"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/edit_bac_s"
                        android:paddingHorizontal="10dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:drawableStart="@drawable/gender"
                            android:drawableTint="@color/red"
                            android:drawablePadding="5dp"
                            android:padding="5dp"
                            android:text="@string/gender"
                            android:textColor="@color/red"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/profile_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/Nocolor"
                            android:enabled="false"
                            android:fontFamily="serif"
                            android:gravity="center_vertical"
                            android:padding="3dp"
                            android:singleLine="true"
                            android:textColor="@color/colorWhiteLight"
                            android:textColorHint="@color/colorWhiteLight"
                            android:textSize="14sp"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/edit_bac_s"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:drawableStart="@drawable/ic_date_range_black_24dp"
                            android:drawableTint="@color/red"
                            android:drawablePadding="5dp"
                            android:padding="5dp"
                            android:text="@string/date_of_birth"
                            android:textColor="@color/red"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/profile_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/Nocolor"
                            android:enabled="false"
                            android:fontFamily="serif"
                            android:gravity="center_vertical"
                            android:padding="3dp"
                            android:singleLine="true"
                            android:textColor="@color/colorWhiteLight"
                            android:textColorHint="@color/colorWhiteLight"
                            android:textSize="14sp"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/edit_bac_s"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:drawableStart="@drawable/ic_person_black_24dp"
                            android:drawableTint="@color/red"
                            android:drawablePadding="5dp"
                            android:padding="5dp"
                            android:text="@string/national_id"
                            android:textColor="@color/red"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/profile_national_No"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:background="@color/Nocolor"
                            android:fontFamily="serif"
                            android:maxLength="10"
                            android:nextFocusDown="@id/signUp_first_name"
                            android:singleLine="true"
                            android:textColor="@color/colorWhiteLight"
                            android:textCursorDrawable="@null"
                            android:textSize="12sp"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/edit_bac_s"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableStart="@drawable/ic_edit"
                            android:drawableTint="@color/red"
                            android:drawablePadding="5dp"
                            android:layout_weight="1"
                            android:text="@string/name_of_fourth_syllables"
                            android:enabled="false"
                            android:fontFamily="serif"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@color/red"
                            android:textColorHint="@color/colorWhiteLight"
                            android:textSize="14sp"
                            app:autoSizeMaxTextSize="15sp"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform"/>

                        <LinearLayout
                            android:id="@+id/profile_nameLinear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/profile_first_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:fontFamily="serif"
                                    android:nextFocusDown="@id/signUp_second_name"
                                    android:padding="3dp"
                                    android:singleLine="true"
                                    android:background="@color/Nocolor"
                                    android:textColor="@color/colorWhiteLight"
                                    android:textColorHint="@color/colorWhiteLight"
                                    android:textCursorDrawable="@null"
                                    android:textSize="14sp"
                                    app:autoSizeMaxTextSize="20sp"
                                    app:autoSizeMinTextSize="12sp"
                                    app:autoSizeStepGranularity="2sp"
                                    app:autoSizeTextType="uniform" />

                                <EditText
                                    android:id="@+id/profile_second_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:layout_weight="1"
                                    android:background="@color/Nocolor"
                                    android:fontFamily="serif"

                                    android:nextFocusDown="@id/signUp_third_name"
                                    android:padding="3dp"
                                    android:singleLine="true"
                                    android:textColor="@color/colorWhiteLight"
                                    android:textColorHint="@color/colorWhiteLight"
                                    android:textCursorDrawable="@null"
                                    android:textSize="14sp"
                                    app:autoSizeMaxTextSize="20sp"
                                    app:autoSizeMinTextSize="12sp"
                                    app:autoSizeStepGranularity="2sp"
                                    app:autoSizeTextType="uniform" />

                            <EditText
                                android:id="@+id/profile_third_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/Nocolor"
                                android:fontFamily="serif"
                                android:nextFocusDown="@id/signUp_fourth_name"
                                android:padding="3dp"
                                android:singleLine="true"
                                android:textColor="@color/colorWhiteLight"
                                android:textColorHint="@color/colorWhiteLight"
                                android:textCursorDrawable="@null"
                                android:textSize="14sp"
                                app:autoSizeMaxTextSize="20sp"
                                app:autoSizeMinTextSize="12sp"
                                app:autoSizeStepGranularity="2sp"
                                app:autoSizeTextType="uniform" />

                            <EditText
                                android:id="@+id/profile_fourth_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_weight="1"
                                android:background="@color/Nocolor"
                                android:fontFamily="serif"
                                android:nextFocusDown="@id/signUp_phone"
                                android:padding="3dp"
                                android:singleLine="true"
                                android:textColor="@color/colorWhiteLight"
                                android:textColorHint="@color/colorWhiteLight"
                                android:textCursorDrawable="@null"
                                android:textSize="14sp"
                                app:autoSizeMaxTextSize="20sp"
                                app:autoSizeMinTextSize="12sp"
                                app:autoSizeStepGranularity="2sp"
                                app:autoSizeTextType="uniform" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/edit_bac_s"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:drawableStart="@drawable/ic_local_phone_black_24dp"
                            android:drawableTint="@color/red"
                            android:drawablePadding="5dp"
                            android:padding="5dp"
                            android:text="@string/phone_number"
                            android:textColor="@color/red"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/profile_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:autoLink="phone"
                            android:linksClickable="true"
                            android:background="@color/Nocolor"
                            android:fontFamily="serif"
                            android:maxLength="10"
                            android:nextFocusDown="@id/signUp_first_name"
                            android:singleLine="true"
                            android:textColor="@color/colorWhiteLight"
                            android:textCursorDrawable="@null"
                            android:textSize="12sp"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/edit_bac_s"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:drawableStart="@drawable/ic_location_on_black_24dp"
                            android:drawableTint="@color/red"
                            android:drawablePadding="5dp"
                            android:padding="5dp"
                            android:text="@string/address"
                            android:textColor="@color/red"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/profile_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:background="@color/Nocolor"
                            android:fontFamily="serif"
                            android:maxLength="10"
                            android:nextFocusDown="@id/signUp_first_name"
                            android:singleLine="true"
                            android:textColor="@color/colorWhiteLight"
                            android:textCursorDrawable="@null"
                            android:textSize="12sp"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/edit_bac_s"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:drawableStart="@drawable/ic_email"
                            android:drawableTint="@color/red"
                            android:drawablePadding="5dp"
                            android:padding="5dp"
                            android:text="@string/e_mail"
                            android:textColor="@color/red"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/profile_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:background="@color/Nocolor"
                            android:fontFamily="serif"
                            android:maxLength="10"
                            android:nextFocusDown="@id/signUp_first_name"
                            android:singleLine="true"
                            android:textColor="@color/colorWhiteLight"
                            android:textCursorDrawable="@null"
                            android:textSize="12sp"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/edit_bac_s"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:drawableStart="@drawable/ic_https_black_24dp"
                            android:drawableTint="@color/red"
                            android:drawablePadding="5dp"
                            android:padding="5dp"
                            android:text="@string/national_id"
                            android:textColor="@color/red"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/profile_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:background="@color/Nocolor"
                            android:fontFamily="serif"
                            android:maxLength="10"
                            android:nextFocusDown="@id/signUp_first_name"
                            android:singleLine="true"
                            android:textColor="@color/colorWhiteLight"
                            android:textCursorDrawable="@null"
                            android:textSize="12sp"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal|center"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/signUp_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edit_bac_sinup"
                android:padding="5dp"
                android:text="Edit"
                android:textSize="14sp"
                android:fontFamily="serif"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="14sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>