<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bank4"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clear_buttons"
    >

    <LinearLayout
        android:id="@+id/linerEditing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:src="@drawable/bank4"
                app:civ_border_color="@color/colorWhiteLight"
                app:civ_border_width="3dp" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="5"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:text="editing Check"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:fontFamily="sans-serif-smallcaps" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:background="@drawable/edit_bac_s"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp">
            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="vertical"-->
            <!--android:padding="5dp"-->
            <!--android:layout_margin="2dp"-->
            <!--android:background="@drawable/edit_bac_"-->
            <!--&gt;-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bac_s"

                android:gravity="center">

                <!--<TextView-->
                <!--android:id="@+id/ttView27"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="2dp"-->
                <!--android:text="ID No."-->
                <!--android:textColor="@color/colorWhite"-->
                <!--android:textSize="18sp"-->
                <!--android:textStyle="bold" />-->

                <EditText
                    android:id="@+id/editorCheque_nationalNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/Nocolor"
                    android:drawableLeft="@drawable/ic_person"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="National No."
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bac_s"
                android:gravity="center">

                <!--<TextView-->
                <!--android:id="@+id/textVi"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="2dp"-->
                <!--android:text="Phone No."-->
                <!--android:textColor="@color/colorWhite"-->
                <!--android:textSize="18sp"-->
                <!--android:textStyle="bold" />-->

                <EditText
                    android:id="@+id/editorCheque_phoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/Nocolor"
                    android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="Phone No."
                    android:inputType="phone"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="18sp" />

            </TableRow>
            <!--</LinearLayout>-->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bac_s"
                android:gravity="center">

                <!--<TextView-->
                <!--android:id="@+id/textView37"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="2dp"-->
                <!--android:text="To the order"-->
                <!--android:textColor="@color/colorWhite"-->
                <!--android:textSize="18sp"-->
                <!--android:textStyle="bold" />-->

                <EditText
                    android:id="@+id/editorCheque_reciever"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/Nocolor"
                    android:drawableLeft="@drawable/ic_border_color_black_24dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="Order To"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bac_s"
                android:gravity="center">

                <!--<TextView-->
                <!--android:id="@+id/textView7"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="2dp"-->
                <!--android:text="Date"-->
                <!--android:textColor="@color/colorWhite"-->
                <!--android:textSize="18sp"-->
                <!--android:textStyle="bold" />-->

                <TextView
                    android:id="@+id/editorCheque_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/Nocolor"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="Date"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                android:background="@color/colorGold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bac_s"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_bac_s"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/editorCheque_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/Nocolor"
                        android:drawableLeft="@drawable/ic_company"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:fontFamily="serif"
                        android:hint="Company  (optional)"
                        android:inputType="textPersonName"
                        android:padding="5dp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_bac_s"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/editorCheque_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/Nocolor"
                        android:drawableLeft="@drawable/ic_notes"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:fontFamily="serif"
                        android:hint="Notes  (optional)"
                        android:inputType="textPersonName"
                        android:padding="5dp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="18sp" />

                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bac_s"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/editorCheque_amountTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                    android:text="amount"
                    android:fontFamily="serif"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/denier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/edit_bac_s"
                        android:ems="5"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:hint="Dinar"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/Phils"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/edit_bac_s"
                        android:ems="5"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:hint="Phils"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="18sp" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/AmouWord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/edit_bac_s"
                        android:ems="5"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:hint="Amount in word"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:scrollbars="horizontal"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="16sp" />

                </TableRow>
            </LinearLayout>

            <TableRow
                android:id="@+id/editorCheque_picLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/yy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Check Pic"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/CheckPic"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:src="@drawable/bank4"
                    app:civ_border_color="@color/colorWhiteLight"
                    app:civ_border_width="3dp" />

            </TableRow>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal|center"
            android:layout_weight="2"
            android:orientation="vertical">

            <Button
                android:id="@+id/SingUpButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edit_bac_sinup"
                android:fontFamily="serif"
                android:padding="5dp"
                android:text="Send"
                android:textSize="18sp"
                android:textColor="@color/colorWhite" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linerBarcode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edit_bac_s"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:gravity="bottom|center"
            android:text="Please scan the barcode to continue editing the check ..."
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="3sp"
            app:autoSizeTextType="uniform"
            app:fontFamily="sans-serif-smallcaps" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:background="@color/colorWhite"
            android:elevation="@dimen/cardview_default_elevation"
            app:cardCornerRadius="100dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Nocolor"
                    android:src="@drawable/rscananimation"
                    app:civ_border_color="@color/colorWhiteLight"
                    app:civ_border_width="3dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/scanBarcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="50dp"
            android:paddingVertical="10dp"
            android:background="@drawable/edit_bac_sinup"
            android:fontFamily="sans-serif-light"
            android:text="Scan Barcode"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:fontFamily="sans-serif-smallcaps" />

        <LinearLayout
            android:id="@+id/editorCheque_haveAProblem"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_help"/>

            <TextView
                android:textSize="16sp"
                android:fontFamily="serif"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="have a problem !"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/editorCheque_serial_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:hint="Serial No"
                android:textColorHint="@color/white"
                app:hintTextColor="@color/red"
                android:focusableInTouchMode="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editorCheque_serial"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/editorCheque_check"
                android:gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/red"
                android:fontFamily="serif"
                android:textSize="18sp"
                android:text="Check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
</LinearLayout>