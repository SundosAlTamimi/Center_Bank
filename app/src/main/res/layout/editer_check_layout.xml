                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_bac_s"
                    android:drawableLeft="@drawable/ic_border_color_black_24dp"
                    android:ems="10"
                    android:hint="Order To"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="14sp" />

            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/edit_bac_s"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textVi7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                    android:text="amount"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/denier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/edit_bac_s"
                        android:ems="5"
                        android:gravity="center"
                        android:hint="Dinar"
                        android:inputType="numberDecimal"
                        android:padding="5dp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/Phils"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/edit_bac_s"
                        android:ems="5"
                        android:gravity="center"
                        android:hint="Phils"
                        android:inputType="numberDecimal"
                        android:padding="5dp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="14sp" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/AmouWord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/edit_bac_s"
                        android:ems="5"
                        android:gravity="center"
                        android:hint="Amount in word"
                        android:inputType="numberDecimal"
                        android:padding="5dp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="14sp" />

                </TableRow>
            </LinearLayout>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp">

                <TextView
                    android:id="@+id/yy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check Pic"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image2"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:src="@drawable/bank4"
                    app:civ_border_color="@color/colorWhiteLight"
                    app:civ_border_width="3dp" />

            </TableRow>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal|center"
            android:layout_weight="2"
            android:orientation="vertical">

            <Button
                android:id="@+id/SingUpButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edit_bac_sinup"
                android:padding="5dp"
                android:text="Send"
                android:textColor="@color/colorWhite" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linerBarcode"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edit_bac_s"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="3"
            android:fontFamily="sans-serif-light"
            android:gravity="bottom|center"
            android:padding="10dp"
            android:text="Please scan the barcode to continue editing the check ..."
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            app:fontFamily="sans-serif-smallcaps" />

        <!--<de.hdodenhof.circleimageview.CircleImageView-->
