<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:id="@+id/tracking_raw_linear"
    android:padding="5dp"
    android:background="@drawable/edit_bac_"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:orientation="vertical"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/date"
                    android:gravity="center"
                    android:padding="5dp"
                    android:fontFamily="serif"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="0"
                    />

                <TextView
                    android:id="@+id/tracking_raw_date"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/beneficiary"
                    android:gravity="center"
                    android:padding="5dp"
                    android:fontFamily="serif"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="0"
                    />

                <TextView
                    android:id="@+id/tracking_raw_beneficiary"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/national_id"
                    android:gravity="center"
                    android:padding="5dp"
                    android:fontFamily="serif"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="0"
                    />

                <TextView
                    android:id="@+id/tracking_raw_nationalID"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/phone_number"
                    android:gravity="center"
                    android:padding="5dp"
                    android:fontFamily="serif"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="0"
                    />

                <TextView
                    android:id="@+id/tracking_raw_phone"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/transaction_type"
                    android:gravity="center"
                    android:padding="5dp"
                    android:fontFamily="serif"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="0"
                    />

                <TextView
                    android:id="@+id/tracking_raw_transactionType"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>