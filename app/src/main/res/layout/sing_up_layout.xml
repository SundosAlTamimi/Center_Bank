<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bank4"
    android:id="@+id/signup_coordinatorLayout"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/clear_buttons"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:padding="10dp"
                    android:text="@string/sing_up"
                    android:textSize="20sp"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform"
                    android:textColor="@color/colorWhite"
                    app:fontFamily="sans-serif-smallcaps" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical">

                       <LinearLayout
                           android:id="@+id/signUp_accountType_linear"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:padding="10dp"
                           android:layout_margin="5dp"
                           android:background="@drawable/edit_bac_s">

                           <TextView
                               android:textColor="@color/red"
                               android:fontFamily="serif"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="@string/account_type"/>

                           <Spinner
                               android:id="@+id/signUp_accountType"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:padding="10dp"
                               />

                       </LinearLayout>

                       <LinearLayout
                           android:id="@+id/signUp_gender_linear"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:padding="10dp"
                           android:layout_margin="5dp"
                           android:background="@drawable/edit_bac_s">

                           <TextView
                               android:textColor="@color/red"
                               android:fontFamily="serif"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="@string/gender"/>

                           <Spinner
                               android:id="@+id/signUp_gender"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:padding="10dp"
                               />
                       </LinearLayout>

                       <LinearLayout
                           android:id="@+id/signUp_documentType_linear"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:padding="10dp"
                           android:layout_margin="5dp"
                           android:background="@drawable/edit_bac_s">

                           <TextView
                               android:textColor="@color/red"
                               android:fontFamily="serif"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="@string/nationality"/>

                           <com.hbb20.CountryCodePicker
                               android:id="@+id/signUp_document_type"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               app:ccp_contentColor="@color/white"
                               app:ccp_defaultNameCode="JO"
                               app:ccp_showNameCode="false"
                               app:ccp_showPhoneCode="false"
                               />
                       </LinearLayout>

                       <LinearLayout
                           android:id="@+id/signUp_dateOfBirth_linear"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:padding="10dp"
                           android:layout_margin="5dp"
                           android:background="@drawable/edit_bac_s">

                           <TextView
                               android:textColor="@color/red"
                               android:fontFamily="serif"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="@string/date_of_birth"/>

                           <TextView
                               android:id="@+id/Date"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_weight="1"
                               android:drawableLeft="@drawable/ic_date_range_black_24dp"
                               android:gravity="center_vertical"
                               android:singleLine="true"
                               android:padding="5dp"
                               android:textColor="@color/colorWhiteLight"
                               android:textColorHint="@color/colorWhiteLight"
                               android:textSize="14sp"
                               android:fontFamily="serif"
                               android:drawablePadding="5dp"
                               app:autoSizeMaxTextSize="20sp"
                               app:autoSizeMinTextSize="12sp"
                               app:autoSizeStepGranularity="2sp"
                               app:autoSizeTextType="uniform" />
                       </LinearLayout>

                       <LinearLayout
                           android:id="@+id/signUp_phone_linear"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_margin="5dp"
                           android:padding="10dp"
                           android:background="@drawable/edit_bac_s">

                           <TextView
                               android:textColor="@color/red"
                               android:fontFamily="serif"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="@string/phone_number"/>

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">

                               <com.hbb20.CountryCodePicker
                                   android:id="@+id/signUp_ccp"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   app:ccp_contentColor="@color/white"
                                   app:ccp_defaultNameCode="JO"
                                   />

                               <EditText
                                   android:id="@+id/signUp_phone"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:backgroundTint="@color/white"
                                   android:layout_weight="1"
                                   android:textCursorDrawable="@null"
                                   android:maxLength="9"
                                   android:hint="@string/_7xxxxxxxx"
                                   android:nextFocusDown="@id/signUp_first_name"
                                   android:inputType="phone"
                                   android:padding="10dp"
                                   android:drawablePadding="5dp"
                                   android:fontFamily="serif"
                                   android:singleLine="true"
                                   android:textColor="@color/colorWhiteLight"
                                   android:textColorHint="@color/colorWhiteLight"
                                   android:textSize="14sp"
                                   app:autoSizeMaxTextSize="20sp"
                                   app:autoSizeMinTextSize="12sp"
                                   app:autoSizeStepGranularity="2sp"
                                   app:autoSizeTextType="uniform"/>
                           </LinearLayout>

                       </LinearLayout>

                       <LinearLayout
                           android:id="@+id/signup_nameLinear"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:padding="10dp"
                           android:layout_weight="1"
                           android:background="@drawable/edit_bac_s"
                           android:orientation="vertical">

                           <TextView
                               android:textColor="@color/red"
                               android:fontFamily="serif"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="@string/name_of_fourth_syllables"/>

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">

                               <EditText
                                   android:id="@+id/signUp_first_name"
                                   android:backgroundTint="@color/white"
                                   android:inputType="textCapWords"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:singleLine="true"
                                   android:textCursorDrawable="@null"
                                   android:nextFocusDown="@id/signUp_second_name"
                                   android:fontFamily="serif"
                                   android:textColor="@color/colorWhiteLight"
                                   android:textColorHint="@color/colorWhiteLight"
                                   android:textSize="14sp"
                                   app:autoSizeMaxTextSize="20sp"
                                   app:autoSizeMinTextSize="12sp"
                                   app:autoSizeStepGranularity="2sp"
                                   app:autoSizeTextType="uniform" />

                               <EditText
                                   android:id="@+id/signUp_second_name"
                                   android:backgroundTint="@color/white"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:inputType="textCapWords"
                                   android:singleLine="true"
                                   android:textCursorDrawable="@null"
                                   android:nextFocusDown="@id/signUp_third_name"
                                   android:fontFamily="serif"
                                   android:textColor="@color/colorWhiteLight"
                                   android:textColorHint="@color/colorWhiteLight"
                                   android:textSize="14sp"
                                   app:autoSizeMaxTextSize="20sp"
                                   app:autoSizeMinTextSize="12sp"
                                   app:autoSizeStepGranularity="2sp"
                                   app:autoSizeTextType="uniform"/>

                               <EditText
                                   android:id="@+id/signUp_third_name"
                                   android:backgroundTint="@color/white"
                                   android:inputType="textCapWords"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:singleLine="true"
                                   android:textCursorDrawable="@null"
                                   android:nextFocusDown="@id/signUp_fourth_name"
                                   android:fontFamily="serif"
                                   android:textColor="@color/colorWhiteLight"
                                   android:textColorHint="@color/colorWhiteLight"
                                   android:textSize="14sp"
                                   app:autoSizeMaxTextSize="20sp"
                                   app:autoSizeMinTextSize="12sp"
                                   app:autoSizeStepGranularity="2sp"
                                   app:autoSizeTextType="uniform" />

                               <EditText
                                   android:id="@+id/signUp_fourth_name"
                                   android:backgroundTint="@color/white"
                                   android:inputType="textCapWords"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:singleLine="true"
                                   android:textCursorDrawable="@null"
                                   android:nextFocusDown="@id/signUp_IdNo"
                                   android:fontFamily="serif"
                                   android:textColor="@color/colorWhiteLight"
                                   android:textColorHint="@color/colorWhiteLight"
                                   android:textSize="14sp"
                                   app:autoSizeMaxTextSize="20sp"
                                   app:autoSizeMinTextSize="12sp"
                                   app:autoSizeStepGranularity="2sp"
                                   app:autoSizeTextType="uniform" />

                           </LinearLayout>
                       </LinearLayout>

                       <com.google.android.material.textfield.TextInputLayout
                           android:id="@+id/signUp_id_linear"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_margin="5dp"
                           android:padding="5dp"
                           android:fontFamily="serif"
                           android:background="@drawable/edit_bac_s"
                           android:textColorHint="@color/white"
                           app:hintTextColor="@color/red"
                           android:hint="@string/id_number"
                           android:focusableInTouchMode="true">

                           <com.google.android.material.textfield.TextInputEditText
                               android:id="@+id/signUp_IdNo"
                               android:textColor="@color/white"
                               android:fontFamily="serif"
                               android:textSize="15sp"
                               android:inputType="textCapWords"
                               android:maxLength="10"
                               android:singleLine="true"
                               android:nextFocusDown="@id/signUp_address"
                               android:backgroundTint="@color/white"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"/>
                       </com.google.android.material.textfield.TextInputLayout>

                       <com.google.android.material.textfield.TextInputLayout
                           android:id="@+id/signUp_address_linear"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_margin="5dp"
                           android:padding="5dp"
                           android:fontFamily="serif"
                           android:background="@drawable/edit_bac_s"
                           android:textColorHint="@color/white"
                           app:hintTextColor="@color/red"
                           android:hint="@string/address"
                           android:focusableInTouchMode="true">

                           <com.google.android.material.textfield.TextInputEditText
                               android:id="@+id/signUp_address"
                               android:textColor="@color/white"
                               android:inputType="textCapWords"
                               android:fontFamily="serif"
                               android:textSize="15sp"
                               android:singleLine="true"
                               android:nextFocusDown="@id/signUp_email"
                               android:backgroundTint="@color/white"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"/>
                       </com.google.android.material.textfield.TextInputLayout>

                       <com.google.android.material.textfield.TextInputLayout
                           android:id="@+id/signUp_email_linear"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="textCapWords"
                           android:layout_margin="5dp"
                           android:padding="5dp"
                           android:fontFamily="serif"
                           android:background="@drawable/edit_bac_s"
                           android:textColorHint="@color/white"
                           app:hintTextColor="@color/red"
                           android:hint="@string/e_mail"
                           android:focusableInTouchMode="true">

                           <com.google.android.material.textfield.TextInputEditText
                               android:id="@+id/signUp_email"
                               android:textColor="@color/white"
                               android:fontFamily="serif"
                               android:textSize="15sp"
                               android:singleLine="true"
                               android:nextFocusDown="@id/signUp_password"
                               android:backgroundTint="@color/white"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"/>
                       </com.google.android.material.textfield.TextInputLayout>

                       <LinearLayout
                           android:id="@+id/signup_passwordLinear"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_margin="5dp"
                           android:padding="5dp"
                           android:orientation="horizontal"
                           android:background="@drawable/edit_bac_s">

                           <com.google.android.material.textfield.TextInputLayout
                               android:layout_width="0dp"
                               android:layout_height="wrap_content"
                               android:layout_weight="2"
                               android:fontFamily="serif"
                               android:textColorHint="@color/white"
                               app:hintTextColor="@color/red"
                               android:hint="@string/password"
                               android:focusableInTouchMode="true">

                               <com.google.android.material.textfield.TextInputEditText
                                   android:id="@+id/signUp_password"
                                   android:textColor="@color/white"
                                   android:fontFamily="serif"
                                   android:textSize="15sp"
                                   android:singleLine="true"
                                   android:nextFocusDown="@id/signUp_confirm_password"
                                   android:inputType="textPassword"
                                   android:backgroundTint="@color/white"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"/>
                           </com.google.android.material.textfield.TextInputLayout>

                           <ImageView
                               android:id="@+id/signUp_seen"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_gravity="bottom"
                               android:layout_weight="0"
                               android:paddingVertical="8dp"
                               android:paddingHorizontal="10dp"
                               app:srcCompat="@drawable/ic_visibility"/>

                       </LinearLayout>

                       <LinearLayout
                           android:id="@+id/signup_confirm_passwordLinear"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_margin="5dp"
                           android:padding="5dp"
                           android:orientation="horizontal"
                           android:background="@drawable/edit_bac_s">

                           <com.google.android.material.textfield.TextInputLayout
                               android:layout_width="0dp"
                               android:layout_height="wrap_content"
                               android:layout_weight="2"
                               android:fontFamily="serif"
                               android:textColorHint="@color/white"
                               app:hintTextColor="@color/red"
                               android:hint="@string/confirm_password"
                               android:focusableInTouchMode="true">

                               <com.google.android.material.textfield.TextInputEditText
                                   android:id="@+id/signUp_confirm_password"
                                   android:textColor="@color/white"
                                   android:fontFamily="serif"
                                   android:textSize="15sp"
                                   android:inputType="textPassword"
                                   android:backgroundTint="@color/white"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"/>
                           </com.google.android.material.textfield.TextInputLayout>

                           <ImageView
                               android:id="@+id/signUp_seen_confirm"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_gravity="bottom"
                               android:layout_weight="0"
                               android:paddingVertical="8dp"
                               android:paddingHorizontal="10dp"
                               app:srcCompat="@drawable/ic_visibility"/>

                       </LinearLayout>

                   </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal|center"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/signUp_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit_bac_sinup"
                    android:padding="5dp"
                    android:text="@string/save"
                    android:textSize="14sp"
                    android:fontFamily="serif"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeMinTextSize="14sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>