<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bank4"
    android:layout_height="400dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/clear_buttons"
        >
    <LinearLayout
        android:id="@+id/dialog_addAccount_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:orientation="horizontal">

        <ImageView
            app:srcCompat="@drawable/ic_border_color_black_24dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"/>

        <TextView
            android:textColor="@color/yellow"
            android:fontFamily="serif"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="@string/ResonOfReject"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:layout_height="match_parent"/>


    </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"

            android:orientation="vertical">
            <EditText
                android:id="@+id/edit_reson"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:hint="type here"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:background="@drawable/edit_bac_"
                android:lines="6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="clip_horizontal|center"
            android:layout_marginTop="30dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/AcceptButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bac_sinup"
                android:padding="5dp"
                android:text="@string/send"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="16sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/canceltButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bac_"
                android:padding="5dp"
                android:text="@string/dialog_cancel"

                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="16sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>