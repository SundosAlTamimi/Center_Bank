            <!--android:id="@+id/profile_image"-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="80dp"-->
            <!--android:layout_weight="1"-->
            <!--android:src="@drawable/rscananimation"-->
            <!--app:civ_border_color="@color/colorWhiteLight"-->
